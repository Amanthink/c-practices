231. Power of Two
+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
logic 1 
bool isPowerOfTwo(int n) {
   unsigned int p=2;
    if(n<1){
       return(false);
    
    }
        if(n==1){
            return(true);
        }
        else{       
        for(int i=1;i<31;i++){
                if(n==p){
                    return(true);
                }
                p=p*2;
            }
        }
    
    return(false);
}


++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
logic 2:

bool isPowerOfTwo(int n) {
    return n > 0 && (n & (n - 1)) == 0;
}
